<p class="nameCountry">{{name}}</p>
<div class="country">
    <ul>
        <li><span class="listOption">Capital:</span> {{capital}}</li>
        <li><span class="listOption">Population:</span> {{population}}</li>
        <li><span class="listOption">Languages:</span>
            <ul>
                {{#each languages}}
                <li>{{this.name}}</li>
                {{/each}}
            </ul>
    </ul>
    <img class="flag" src="{{flag}}">
</div>